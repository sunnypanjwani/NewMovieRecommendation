<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sunny.newmovierecommendation" 
	android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" 
	    android:label="@string/app_name"
		android:debuggable="true">
		
		
		<activity android:name=".NewMovieRecommendationActivity"
                  android:label="@string/app_name"
                   android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		
		<activity 
      android:name="com.sunny.screen.MovieScreen"
      class=".MovieScreen" android:label="MovieScreen">
      </activity>

	  <activity 
      android:name="com.sunny.screen.MovieRecommendationScreen"
      class=".MovieRecommendationScreen" android:label="Your Recommendations!">
      </activity>
      
	</application>
	 <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	
</manifest> 